FROM rocker/r-ver:4.3.1
ENV RENV_CONFIG_REPOS_OVERRIDE https://packagemanager.rstudio.com/cran/latest

# instalamos librerias de sistema

RUN apt-get update -qq && apt-get install -y --no-install-recommends \
  default-jdk \
  libcurl4-openssl-dev \
  libicu-dev \
  libsodium-dev \
  libssl-dev \
  make \
  zlib1g-dev \
  libxml2-dev \
  libglpk-dev \
  && apt-get clean

# Intalamos librer√≠as de R , hay motivo para copiar primero el renv primero las librerias y luego los ficheros
COPY renv_simplify.lock ./

RUN  Rscript -e "install.packages('renv')" \
     && Rscript -e "options(install.opts = c('--no-help', '--no-docs')); renv::restore(lockfile = 'renv_simplify.lock')"



EXPOSE 8000
CMD R -e "source('/opt/ml/launch.R')"


